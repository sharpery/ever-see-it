<div class="media">
  <div class="media-body">
    <small>
      <%= comment.user.name %> commented:
    </small>
    <p><%= comment.body %> </p>
    <small>
    <%= time_ago_in_words(comment.created_at) %> ago
    <% if user_is_authorized_for_comment?(comment) %>
      | <%= link_to "Delete", [comment.post, comment], method: :delete, remote: true %>
    <% end %>
  </small>
  </div>
</div>
